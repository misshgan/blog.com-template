{{#if @member.paid}}

    <div class="member-subscription flex">
        <div class="member-subscription__item member-subscription__item--full-width">
            <label>{{t 'Name:'}}</label>
            <span>{{@member.name}}</span>
        </div>
        <div class="member-subscription__item">
            <label>{{t 'Email:'}}</label>
            <span>{{@member.email}}</span>
        </div>
        <div class="member-subscription__item">
            <label>{{t 'Your plan:'}}</label>
            <span>{{tier.name}} - {{price plan}}/{{plan.interval}}</span>
        </div>
        <div class="member-subscription__item">
            <label>{{t 'Card:'}}</label>
            <span>**** **** **** {{default_payment_card_last4}}</span>
        </div>
        <div class="member-subscription__item">
            <label>{{#if cancel_at_period_end}}{{t "Expires"}}{{else}}{{t "Next bill date"}}{{/if}}</label>
            <span>{{date current_period_end format="DD MMM YYYY"}}</span>
        </div>
    </div>

    <div class="member-subscription__edit flex items-center content-space-b">
        <a title="Edit billing info" class="btn" href="javascript:"
            data-members-edit-billing
            data-members-success="{{@site.url}}/account/?stripe=billing-update-success"
            data-members-cancel="{{@site.url}}/account/?stripe=billing-update-cancel"
            >{{t "Edit billing info"}}</a>

        {{cancel_link 
            class="btn btn--transparent"
            cancelLabel=(t 'Cancel subscription')
            continueLabel=(t 'Continue subscription')
        }}
    </div>

{{else if @member}}

    <div class="member-subscription flex">
        <div class="member-subscription__item member-subscription__item--full-width">
            <label>{{t 'Name:'}}</label>
            <span>{{@member.name}}</span>
        </div>
        <div class="member-subscription__item">
            <label>{{t 'Email:'}}</label>
            <span>{{@member.email}}</span>
        </div>
        <div class="member-subscription__item">
            <label>{{t 'Your plan:'}}</label>
            <span>{{t 'Free'}}</span>
        </div>
    </div>
    
{{/if}}