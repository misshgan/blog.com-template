<footer class="footer">
    <div class="container container_footer">
        <div class="footer__info">
            {{#link href=@site.url class="footer__brand"}}
                {{#if @site.logo}}
                    {{!-- Site logo --}}
                    {{> image
                    image_type="site"
                    image_class="lazyload footer__logo"
                    image_url=@site.logo
                    size_m=true
                    loading="lazy"
                    }}
                {{else}}
                    {{!-- Site Title --}}
                    <span class="footer__title">{{@site.title}}</span>
                {{/if}}
            {{/link}}
            {{#if @member}}
                {{> cta classes="cta_footer"}}
            {{/if}}
            <ul class="footer__socials flex items-center">
                {{#if @site.facebook}}
                    <li class="footer__social"><a href="{{facebook_url}}">{{> icons/facebook}}</a></li>
                {{/if}}
                {{#if @site.twitter}}
                    <li class="footer__social"><a href="{{twitter_url}}">{{> icons/twitter}}</a></li>
                {{/if}}
            </ul>
        </div>
        <div class="footer__nav-container mr-big-l">
            <h4 class="footer__nav-title heading-4">{{t "Navigation"}}</h4>
            <div class="flex">
                {{> navigation classes="mr-md-r footer__nav footer__nav_primary flex flex-col"}}
                {{#if @site.secondary_navigation}}
                    {{navigation type="secondary" classes="footer__nav footer__nav_secondary flex flex-col"}}
                {{/if}}
            </div>
        </div>
        <div class="footer__copy">
            <span>&copy;{{date format="YYYY"}}&nbsp;{{#link href=@site.url}}{{@site.title}}{{/link}}.</span>
        </div>
    </div>
</footer>

