<li class="post-card-wrapper {{classes}}">
    <article class="post-card flex flex-col ">
        {{#if feature_image}}
            <a href="{{url}}" class="post-card__img">
                {{> image
                    image_type="post"
                    image_class="lazyload"
                    image_url=feature_image
                    size_l=true
                    size_m=true
                    loading="lazy"
                }}
            </a>
        {{/if}}
        {{#match classes "=" 'width-half'}}

            {{> tags-loop classes="post-card__tags size-m"}}

            <h3 class="post-card__title heading-3"><a class="link" href="{{url}}">{{title}}</a></h3>

        {{else match classes "=" 'width-third'}}

            {{> tags-loop classes="post-card__tags size-s"}}

            <h4 class="post-card__title heading-4"><a class="link" href="{{url}}">{{title}}</a></h4>

        {{/match}}
        {{#if excerpt}}
            <p class="post-card__excerpt">{{excerpt}}</p>
        {{/if}}
        <div class="post-card__footer flex items-center">
            <time class="post-card__date" datetime="{{ date published_at }}">{{ date published_at }}</time>
            {{#if reading_time}}
                <p class="post-card__reading-time"><span style="margin: 0 1rem;">|</span>{{reading_time}}</p>
            {{/if}}
        </div>
        <h1>{{test}}</h1>
    </article>
</li>