{{^if @member}}
    <article class="cta {{classes}} flex flex-col {{^match classes '=' 'cta--footer'}} items-center {{/match}}">
        {{#match classes "=" 'cta_footer'}}
            <h4 class="cta__title heading-4">{{@custom.cta_section_title}}</h4>
        {{else}}
            {{^if is_post_preview}}
               <h2 class="cta__title heading-2">{{@custom.cta_section_title}}</h2>
            {{else}}
                <h2 class="cta__title heading-2">{{t "Sign up now to read the full story and get access to all members-only posts."}}</h2>
            {{/if}}
        {{/match}}
        <form class="cta__form flex {{^match classes '=' 'cta--footer'}} items-center {{/match}} flex-col" data-members-form="signup">
            <div class="flex {{^match classes '=' 'cta--footer'}} items-center {{/match}}">
                <input data-members-email class="cta__form-input" placeholder="Your e-mail@gmail.com" type="email">
                <button class="cta__form-button btn btn--cta {{^match classes '=' 'cta--footer'}} btn--cta-footer {{/match}}">{{@custom.cta_section_button_text}}</button>
            </div>
            <div class="cta__messages">
                <div class="msg-success animate">{{t "Great! Check your inbox and click the link."}}</div>
                <div data-members-error class="msg-error animate"></div>
            </div>
        </form>
        
    </article>
{{/if}}