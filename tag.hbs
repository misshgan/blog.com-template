{{!< default}}

{{#tag}}

<aside>
    <nav class="breadcrumbs" aria-label="breadcrumbs">
        <ol class="flex items-center">
            <li><a class="link" href="{{@site.url}}">Home</a><span>{{> icons/arrow-right-thin}}</span></li>
            <li><a class="link" href="{{@site.url}}/categories/">Categories</a><span>{{> icons/arrow-right-thin}}</span></li>
            <li class="breadcrumbs__current"><a href="{{@site.url}}/tag/{{slug}}" aria-current="location">{{name}}</a></li>
        </ol>
    </nav>
</aside>

<section class="collection">

</section>
{{/tag}}

<div class="gh-page">
    <div class="gh-container">

        {{#tag}}
        <header class="gh-page-head">

            <h1>{{name}}</h1>

            <p>
                {{#if description}}
                    {{description}}
                {{else}}
                    A collection of {{plural ../pagination.total empty='posts' singular='% post' plural='% posts'}}
                {{/if}}
            </p>

            {{#if feature_image}}
                <img class="gh-page-image" src="{{feature_image}}" alt="{{name}}" />
            {{/if}}

        </header>
        {{/tag}}

        <div class="gh-postfeed">
        {{#foreach posts}}

            {{> "card"}} {{!-- partials/card.hbs --}}

        {{/foreach}}
        </div>

    </div>
</div>
