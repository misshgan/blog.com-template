{
    "name": "shiroi",
    "description": "Minimalistic blog theme for Blog.com",
    "demo": "",
    "version": "1.0.0",
    "engines": {
        "ghost": ">=5.0.0"
    },
    "license": "MIT",
    "scripts": {
        "dev": "rollup -c --environment BUILD:development -w",
        "build": "rollup -c --environment BUILD:production",
        "zip": "npm run build && bestzip $npm_package_name.zip assets/* partials/* members/* *.hbs package.json",
        "test": "npx gscan .",
        "pretest": "npm run build"
    },
    "author": {
        "name": "Sooma.com",
        "email": "ask@sooma.com",
        "url": "https://sooma.com/pt-pt/"
    },
    "gpm": {
        "type": "theme",
        "categories": [
            "Minimal",
            "Magazine"
        ]
    },
    "keywords": [
        "blog.com",
        "theme",
        "blog.com-theme",
        "ghost-theme"
    ],
    "devDependencies": {
        "@babel/core": "^7.21.0",
        "@babel/preset-env": "^7.20.2",
        "@rollup/plugin-babel": "^6.0.3",
        "@rollup/plugin-commonjs": "^25.0.0",
        "@rollup/plugin-node-resolve": "^15.0.1",
        "@rollup/plugin-terser": "^0.4.0",
        "bestzip": "^2.2.1",
        "postcss": "^8.4.24",
        "postcss-import": "^15.1.0",
        "postcss-preset-env": "^8.0.1",
        "rollup": "^3.18.0",
        "rollup-plugin-livereload": "^2.0.5",
        "rollup-plugin-postcss": "^4.0.2"
    },
    "browserslist": [
        "defaults"
    ],
    "config": {
        "card_assets": true,
        "posts_per_page": 15,
        "image_sizes": {
            "xxs": {
                "width": 30
            },
            "xs": {
                "width": 100
            },
            "s": {
                "width": 300
            },
            "m": {
                "width": 600
            },
            "l": {
                "width": 1200
            },
            "xl": {
                "width": 2000
            }
        },
        "custom": {
            "hero_cta_background_image": {
                "type": "image"
            },
            "show_categories_below_hero_cta_section": {
                "type": "boolean",
                "default": true,
                "description": "Small category cards will be shown below the CTA image."
            },
            "enter_tag_to_display_publications_on_the_home_page": {
                "type": "text",
                "group": "homepage",
                "description": "Insert tags' slugs separated by commas."
            },
            "cta_section_title": {
                "type": "text",
                "description": "Insert text that you would like to see in the CTA section.",
                "default": "Be the first to know"
            },
            "cta_section_button_text": {
                "type": "text",
                "default": "Subscribe"
            }
            
        }
    },
    "type": "module",
    "dependencies": {
        "lazysizes": "^5.3.2"
    }
}
